#ifndef FAUST_CONSTANT_H
#define FAUST_CONSTANT_H

//if defined, compilation with openblas for dense algebra
#cmakedefine __GEMM_WITH_OPENBLAS__

//if defined, faust uses single precision for the the algebra (faust_mat, faust_spmat, faust_ faust_core), if not, double precision 
// (only useful for the mexfunction (MATLAB wrapper) since the faust_mat ... classes are template)
#cmakedefine FAUST_SINGLE

//if defined, print debug message (useful for debugging)
#cmakedefine FAUST_VERBOSE  


#ifdef FAUST_SINGLE
   typedef float faust_real; //single precision
#else
	typedef double faust_real; //double precision 
#endif



typedef unsigned long int faust_unsigned_int;
typedef long int faust_int;

const double FAUST_PRECISION = 0.0001;
const faust_unsigned_int nbr_iter_norm = 100; 

#define FAUST_GPU_ALREADY_SET -3
#define FAUST_DEFAULT_CUDA_DEVICE 0

#endif
